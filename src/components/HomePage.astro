---
import type { FeedItem } from "../lib/substack";

type Theme = "default" | "drive" | "brutal" | "miami";

const { posts, theme, badge } = Astro.props as {
  posts: FeedItem[];
  theme: Theme;
  badge: string;
};

const site = Astro.props.site as {
  name: string;
  title?: string;
  headline: string;
  substackUrl: string;
  domain: string;
  about: string;
  projects?: Array<{
    name: string;
    blurb: string;
    bullets?: string[];
    links?: Array<{ label: string; href: string }>;
  }>;
  email?: string;
  twitter?: string;
};

function themeLabel(t: Theme) {
  if (t === "drive") return "Drive";
  if (t === "brutal") return "Brutal";
  if (t === "miami") return "Miami";
  return "Default";
}
---

<html lang="en" data-theme={theme}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{site.name}{site.title ? ` ${site.title}` : ""}</title>
    <meta name="description" content={`${site.name} ${site.headline}`} />
    <link rel="canonical" href={`https://${site.domain}/`} />

    <!-- Open Graph / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${site.name}${site.title ? ` ${site.title}` : ""}`} />
    <meta property="og:description" content={site.headline} />
    <meta property="og:url" content={`https://${site.domain}/`} />
    <meta property="og:image" content={`https://${site.domain}/og.jpg`} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${site.name}${site.title ? ` ${site.title}` : ""}`} />
    <meta name="twitter:description" content={site.headline} />
    <meta name="twitter:image" content={`https://${site.domain}/og.jpg`} />
    {site.twitter ? (
      <meta name="twitter:site" content={site.twitter.startsWith("@") ? site.twitter : `@${site.twitter}`} />
    ) : null}

    <link rel="icon" type="image/svg+xml" href={theme === "drive" ? "/favicon-drive.svg" : "/favicon.svg"} />
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body>
    <header class="topbar">
      <div class="container">
        <div class="brand">
          <div>
            <h1>
              {site.name}
              <span class="badge">{badge}</span>
            </h1>
            <p class="tagline">
              <span class="holo">{site.headline}</span>
            </p>
          </div>
          <nav class="nav" aria-label="Primary">
            <a href="#projects">projects</a>
            <a href="#writings">writing</a>
            <a href="#about">about</a>
            <a href={site.substackUrl} target="_blank" rel="noreferrer">substack ↗</a>
          </nav>
        </div>

        <div class="themebar" aria-label="Theme">
          <span class="themebar__label">Theme:</span>
          <a class={theme === "default" ? "is-active" : ""} href="/?theme=default">default</a>
          <a class={theme === "drive" ? "is-active" : ""} href="/drive">drive</a>
          <a class={theme === "brutal" ? "is-active" : ""} href="/brutal">brutal</a>
          <a class={theme === "miami" ? "is-active" : ""} href="/miami">miami</a>
          <span class="themebar__current">({themeLabel(theme)})</span>
        </div>
      </div>
    </header>

    <main class="container">
      <section class="hero">
        <p class="small">
          For the work: <a href="#projects">projects</a>. For ideas: <a href="#writings">writing</a>.
        </p>

        <div class="card" style="margin-top: 12px;">
          <p class="small" style="margin: 0;">
            Featured:
            <a href="#projects">Projects</a>
            ·
            <a href={site.substackUrl} target="_blank" rel="noreferrer">Substack</a>
            ·
            <a href="#contact">Email</a>
          </p>
        </div>
      </section>

      <section id="projects" class="section">
        <h2>Projects</h2>
        <div class="card">
          {site.projects?.length ? (
            <ul class="postlist">
              {site.projects.map((p) => (
                <li style="padding: 10px 0;">
                  <div style="display:flex; gap:10px; align-items:baseline; flex-wrap:wrap;">
                    <strong>{p.name}</strong>
                    <span class="small" style="opacity:0.85;">{p.blurb}</span>
                  </div>

                  {p.bullets?.length ? (
                    <ul class="small" style="margin: 8px 0 0 18px; opacity: 0.9;">
                      {p.bullets.map((b) => (
                        <li>{b}</li>
                      ))}
                    </ul>
                  ) : null}

                  {p.links?.length ? (
                    <p class="small" style="margin: 8px 0 0 0;">
                      {p.links
                        .filter((l) => l.href)
                        .map((l, idx) => (
                          <>
                            {idx ? " · " : ""}
                            <a href={l.href} target="_blank" rel="noreferrer">{l.label}</a>
                          </>
                        ))}
                    </p>
                  ) : null}
                </li>
              ))}
            </ul>
          ) : (
            <p class="small">A few things I’ve built and shipped.</p>
          )}
        </div>
      </section>

      <section id="writings" class="section">
        <h2>Writing</h2>
        <div class="card">
          {posts.length ? (
            <ul class="postlist">
              {posts.slice(0, 5).map((p) => (
                <li>
                  <span class="date">{p.pubDate || ""}</span>
                  <a href={p.link} target="_blank" rel="noreferrer">{p.title}</a>
                </li>
              ))}
            </ul>
          ) : (
            <p>
              I couldn’t load the feed right now. You can still read everything on{" "}
              <a href={site.substackUrl} target="_blank" rel="noreferrer">Substack</a>.
            </p>
          )}

          <p class="small" style="margin-top: 10px;">
            More: <a href={site.substackUrl} target="_blank" rel="noreferrer">Substack archive</a>
          </p>
        </div>
      </section>

      <section id="about" class="section">
        <h2>About</h2>
        <div class="card">
          <p>{site.about}</p>
        </div>
      </section>

      <section id="contact" class="section">
        <h2>Contact</h2>
        <div class="card">
          <p>
            Best place to follow: <a href={site.substackUrl} target="_blank" rel="noreferrer">Substack</a>.
            {site.email ? (
              <>
                <br />
                Or email: <a href={`mailto:${site.email}`}>{site.email}</a>
              </>
            ) : null}
          </p>
        </div>
      </section>

      <footer class="footer">
        <div>
          <span class="holo">{""}</span>
          <div>© {new Date().getFullYear()} {site.name}.</div>
        </div>
      </footer>
    </main>
  </body>
</html>
